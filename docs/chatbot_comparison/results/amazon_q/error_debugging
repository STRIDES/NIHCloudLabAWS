```
workflow samtools_sort_index_workflow {
    input {
        File input_bam
    }

    call samtools_sort {
        input:
            bam_file = input_bam
    }

    call samtools_index {
        input:
            sorted_bam = samtools_sort.sorted_bam
    }

    output {
        File sorted_bam = samtools_sort.sorted_bam
        File bam_index = samtools_index.bam_index
    }
}

task samtools_sort {
    input {
        File bam_file
    }

    command <<<
        samtools sort ${bam_file} -o sorted.bam
    >>>

    output {
        File sorted_bam = "sorted.bam"
    }

    runtime {
        docker: "biocontainers/samtools:v1.9-4-deb_cv1"
        memory: "4G"
        cpu: 2
        disk: "100G"  # Added disk specification
    }
}

task samtools_index {
    input {
        File sorted_bam
    }

    command <<<
        samtools index ${sorted_bam}
    >>>

    output {
        File bam_index = "${sorted_bam}.bai"  # Fixed to use the input BAM name
    }

    runtime {
        docker: "biocontainers/samtools:v1.9-4-deb_cv1"
        memory: "2G"
        cpu: 1
        disk: "50G"  # Added disk specification
    }
}
```
